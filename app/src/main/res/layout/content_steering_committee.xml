<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.wqt.iccc2016.qpf.SteeringCommitteeActivity"
    tools:showIn="@layout/activity_steering_committee">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_steering_chair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:gravity="left"
            android:maxLines="1"
            android:text="Chairs:"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ListView
            android:id="@+id/lv_steering_chair"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:layout_weight="1"
            android:background="#ffffff"
            android:divider="@null"
            android:dividerHeight="10dp">

        </ListView>

        <TextView
            android:id="@+id/tv_steering_vice_chair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="Vice Chair:"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ListView
            android:id="@+id/lv_steering__vice_chair"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:scrollbars="none"
            android:layout_weight="1"
            android:background="#ffffff"
            android:divider="@null"
            android:dividerHeight="10dp">

        </ListView>

        <TextView
            android:id="@+id/tv_steering_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:maxLines="1"
            android:text="Member:"
            android:textColor="#000000"
            android:textSize="22sp" />

        <ListView
            android:id="@+id/lv_steering__member"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:scrollbars="none"
            android:background="#ffffff"
            android:divider="@null"
            android:dividerHeight="10dp">

        </ListView>
    </LinearLayout>
</ScrollView>


</LinearLayout>
